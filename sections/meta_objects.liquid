{%- style -%}
  /* Contenedor principal de las tarjetas (opcional, para organizar varias tarjetas) */
  .maker-cards-container {
    display: flex; /* Para que las tarjetas se pongan en fila */
    flex-wrap: wrap; /* Para que bajen de línea si no caben */
    gap: 20px; /* Espacio entre las tarjetas */
    justify-content: center; /* Centrar las tarjetas horizontalmente */
    padding: 20px;
  }

  /* Estilos para cada tarjeta individual */
  .maker-card {
    background-color: #ffffff; /* Fondo blanco para la tarjeta */
    border-radius: 8px; /* Bordes ligeramente redondeados */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra sutil para dar profundidad */
    padding: 20px; /* Espaciado interno de la tarjeta */
    text-align: center; /* Centrar el contenido de la tarjeta */
    max-width: 300px; /* Ancho máximo de cada tarjeta */
    flex: 1 1 auto; /* Permite que las tarjetas se ajusten y crezcan/reduzcan */
    min-width: 250px; /* Ancho mínimo para evitar que sean muy pequeñas */
    display: flex; /* Usamos flexbox para alinear el contenido interno */
    flex-direction: column; /* Apila los elementos verticalmente */
    justify-content: space-between; /* Distribuye el espacio entre los elementos */
    align-items: center; /* Centra los elementos horizontalmente */
  }

  /* Estilos para la imagen del maker */
  .maker-card img {
    border-radius: 50%; /* Hacer la imagen circular */
    width: 100px; /* Asegurar el tamaño de la imagen */
    height: 100px; /* Asegurar el tamaño de la imagen */
    object-fit: cover; /* Recortar la imagen para que encaje bien */
    margin-bottom: 15px; /* Espacio debajo de la imagen */
    border: 2px solid #eee; /* Un borde sutil alrededor de la imagen */
  }

  /* Estilos para el nombre del maker */
  .maker-card h3 {
    /* Cambié <p> por
<h3> para el nombre */
    font-size: 1.5em; /* Tamaño de fuente más grande */
    color: #333; /* Color de texto oscuro */
    margin-bottom: 10px; /* Espacio debajo del nombre */
  }

  /* Estilos para la biografía del maker */
  .maker-card p {
    font-size: 0.95em; /* Tamaño de fuente ligeramente más pequeño */
    color: #555; /* Color de texto más suave */
    line-height: 1.5; /* Espaciado de línea para mejor legibilidad */
    margin-bottom: 0; /* No hay margen inferior si es el último elemento */
    flex-grow: 1; /* Permite que la biografía ocupe el espacio disponible */
  }
{%- endstyle -%}

<div class="maker-cards-container">
  {% for maker in section.settings.makers %}
    <div class="maker-card">
      <h3>{{ maker.name }}</h3>
      <img src="{{ maker.image | image_url: width: 100, height: 100 }}" alt="{{ maker.name }}">
      <p>{{ maker.bio | metafield_tag }}</p>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "meta_objects",
  "tag": "section",
  "settings": [
    {
      "type": "metaobject",
      "id": "maker",
      "label": "maker",
      "metaobject_type": "craftsperson"
    },
    {
      "type": "metaobject_list",
      "id": "makers",
      "label": "makers",
      "metaobject_type": "craftsperson"
    }
  ],
  "presets": [
    {
      "name": "meta_objects",
      "settings": {}
    }
  ]
}
{% endschema %}
